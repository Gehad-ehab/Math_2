<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mm5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="100dip"
        android:layout_marginEnd="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginBottom="0dip"
        android:text="Math Planet"
        android:textColor="#000844"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="180dip"
        android:layout_marginEnd="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginBottom="0dip"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Your Email"
        android:inputType="textPersonName"
        android:padding="8dip"
        android:shadowColor="#00CC1010"
        android:textColorHint="#020835"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/user_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dip"
        android:ems="10"
        android:hint="Your Password"
        android:inputType="textPassword"
        android:textColorHint="#040E44" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_pass"
        android:layout_marginStart="50dip"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="60dip"
        android:layout_marginEnd="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginBottom="50dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dip"
            android:layout_weight="1"
            android:text="Sign in"
            android:textColor="#01093D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/registe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dip"
            android:layout_weight="1"
            android:text="Register"
            android:textColor="#01093D"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>